//-
  bootstrap4で記事をサムネイル付きのタイル表示する
- var title = 'bootstrap4で記事をサムネイル付きのタイル表示する'

// data url 280 x 180
- const dummyImage = 'data:image/gif;base64,'

mixin articleCard(title, summury, link)
  .card
    img.card-img-top(src=dummyImage, alt='記事のサムネイル')
    .card-body
      h5.card-title= title
      p.card-text= summury
      a.btn.btn-primary(href=link) 続きを読む
    .card-footer
      ul.list-unstyled.m-0
        li
          small.text-muted 作成者 山田 太郎
        li
          small.text-muted 作成日 2017/12/31

doctype html
title #{title}
body
  link(rel='stylesheet', href='./node_modules/bootstrap/dist/css/bootstrap.min.css')
  style.
    .card {
      width: 18rem;
    }
  .container
    .row.justify-content-center
      h1 #{title}

      .card-columns
        - const summary = '記事の内容記事の内容記事の内容記事の内容記事の内容記事の内容記事の内容記事の内容...'
        each i in [1,2,3,4,5,6]
          +articleCard('タイトル'+i, summary, '#'+i)
