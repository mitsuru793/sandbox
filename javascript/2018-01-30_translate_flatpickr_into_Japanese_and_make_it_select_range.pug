//-
  flatpickrで時刻を追加して、範囲選択をできるようにする。
- const title = 'flatpickrで時刻を追加して、範囲選択をできるようにする。'
doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(rel='stylesheet' type='text/css' href='./node_modules/flatpickr/dist/themes/material_green.css')
    script(src='./node_modules/flatpickr/dist/flatpickr.min.js')
    script(src='./node_modules/flatpickr/dist/l10n/ja.js')
    style.
      .dateSelector {
        display: flex;
        flex-direction: row;
      }
      input {
        margin: 0 10px;
      }
  body
    h1 #{title}
    .dateSelector
      input#ex1StartDate(type='text')
      input#ex1StartTime(type='text')
      span ~
      input#ex1EndDate(type='text')
      input#ex1EndTime(type='text')
    script.
      flatpickr('#ex1StartDate', {
        locale: 'ja',
      })
      flatpickr('#ex1StartTime', {
        locale: 'ja',
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        time_24hr: true,
      })

      flatpickr('#ex1EndDate', {
        locale: 'ja',
      })
      flatpickr('#ex1EndTime', {
        locale: 'ja',
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        time_24hr: true,
      })
