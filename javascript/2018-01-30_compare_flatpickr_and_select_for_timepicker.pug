//-
  flatpickrと通常のselectでtimepickerを比較する
- const title = 'flatpickrと通常のselectでtimepickerを比較する'
doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(rel='stylesheet' type='text/css' href='./node_modules/flatpickr/dist/themes/material_green.css')
    script(src='./node_modules/moment/moment.js')
    script(src='./node_modules/flatpickr/dist/flatpickr.min.js')
    script(src='./node_modules/flatpickr/dist/l10n/ja.js')
    style.
      .dateSelector {
        display: flex;
        flex-direction: row;
      }
      input {
        margin: 0 10px;
      }
  body
    h1 #{title}
    h2 flatpickr
    input#flatpickr(type='text')
    h2 select
    select#select
    script.
      flatpickr('#flatpickr', {
        locale: 'ja',
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        time_24hr: true,
      })

      select = document.getElementById('select')
      for(let h = 0; h < 24; h++) {
        for(let m = 0; m < 60; m+=30) {
          const time = moment(`${h}:${m}`, 'H:m').format('HH:mm')
          const opt = document.createElement('option')
          opt.text = time
          opt.value = time
          select.appendChild(opt)
        }
      }
